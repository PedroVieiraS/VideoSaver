{
  "manifest_version": 3,
  "name": "YouTube Video Saver",
  "version": "1.0",
  "description": "Captura informações do vídeo do YouTube e envia para uma API.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "play.png",
      "48": "play.png",
      "128": "play.png"
    }
  }
} 