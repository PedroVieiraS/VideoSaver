generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Video {
  id Int @id @default(autoincrement())
  title String 
  url String
  minute Float
  categoryId Int
  categories Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id Int @id @default(autoincrement())
  type String
  video Video[]
}
